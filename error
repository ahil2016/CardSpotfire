<script>
$(document).ready(function(){
var ytdBudgetEle1 = document.getElementById('ytdBudgetDiv1');
$(ytdBudgetEle1).on('DOMSubtreeModified',function(){
	var budgetValText1 = document.getElementById('budgetVal1').innerText.replace('$', '');
        var budgetVal1 = parseInt(budgetValText1);
        var revenuteText1 = document.getElementById('revenueValue1').innerText.replace('$', '');
        var revenueValue1 = parseInt(revenuteText1);
        var revenueBarIndicator1 = document.querySelector('#revenueValue1+.background-bar .bar-indicator');
        revenueBarIndicator1.style.width = budgetVal1 === revenueValue1 ? ('90%') : (budgetVal1 < revenueValue1 ? ((90 * (revenueValue1 / budgetVal1)) > 100 ? '100%' : (90 * (revenueValue1 / budgetVal1) + '%')) : (90 * (revenueValue1 / budgetVal1) + '%'));
  })
})
        
    </script>
</html>

<script>



		$("#SLMActualRevenueVal").on('DOMSubtreeModified',function(){

		if(!isNaN(parseFloat($(this).text()))) {
		 var SLMActualRevenueVal = parseFloat($(this).text());
		 if(SLMActualRevenueVal >= 100) {
			$(this).css("background", "#84d9a3");
		 } else if(SLMActualRevenueVal >= 90 && SLMActualRevenueVal <100 ) {
		 $(this).css("background", "#F7DC6F");
		} else {
$(this).css("background", "#F58D8D");
		}
		}
		 
  })
</script>

